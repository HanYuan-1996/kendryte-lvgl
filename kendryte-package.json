        "gui/lvgl/src/widgets/*.c",
        "gui/lvgl_driver/*.c"
    ],
    "dependency": {
        "kendryte/standalone-sdk": "develop"
    },
    "header": [
        "gui",
        "gui/lvgl_driver"
    ]
}
